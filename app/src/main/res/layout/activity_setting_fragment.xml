<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".features.setting.SettingFragment"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <TextView
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="141dp"
            android:layout_marginTop="15dp"
            android:text="My Profile"
            android:textColor="@color/overlay_dark_80"
            android:textSize="8pt"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/my_profile">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gambar_profil"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fotokopi" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/email_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Widiana@gmail.com"
                    android:textColor="@color/overlay_dark_30"
                    android:textSize="8pt"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:text="Widiana"
                    android:textColor="@color/overlay_dark_80"
                    android:textSize="12pt"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/garis"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="175dp"
            android:background="@color/overlay_dark_30"></ImageView>

        <ImageView
            android:id="@+id/foto_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/garis"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"></ImageView>

        <ImageView
            android:id="@+id/foto_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/garis2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/waktu"></ImageView>

        <TextView
            android:id="@+id/tag_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garis"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/foto_user"
            android:text="Nama Lengkap"
            android:textColor="@color/overlay_dark_80"
            android:textSize="10pt"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/nama_lengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tag_nama"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/foto_user"
            android:text="Widiana Putra W."
            android:textColor="@color/overlay_dark_30"
            android:textSize="8pt"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/garis2"
            android:layout_below="@id/nama_lengkap"
            android:layout_marginTop="4dp"
            android:layout_width="330dp"
            android:layout_centerInParent="true"
            android:layout_height="1dp"
            android:background="@color/overlay_dark_10">
        </ImageView>

        <TextView
            android:id="@+id/tag_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garis2"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/foto_time"
            android:text="Shift Kerja"
            android:textColor="@color/overlay_dark_80"
            android:textSize="10pt"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/jam_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tag_shift"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/foto_time"
            android:text="10.00 - 18.00"
            android:textColor="@color/overlay_dark_30"
            android:textSize="8pt"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/garis3"
            android:layout_below="@id/jam_shift"
            android:layout_marginTop="4dp"
            android:layout_width="330dp"
            android:layout_centerInParent="true"
            android:layout_height="1dp"
            android:background="@color/overlay_dark_10">
        </ImageView>

        <ImageView
            android:id="@+id/foto_employee"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/garis3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/employee"></ImageView>


        <TextView
            android:id="@+id/tag_posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garis3"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/foto_time"
            android:text="Posisi"
            android:textColor="@color/overlay_dark_80"
            android:textSize="10pt"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tag_posisi"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/foto_time"
            android:text="Front Desk Cashier"
            android:textColor="@color/overlay_dark_30"
            android:textSize="8pt"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/garis4"
            android:layout_below="@id/posisi"
            android:layout_marginTop="4dp"
            android:layout_width="330dp"
            android:layout_centerInParent="true"
            android:layout_height="1dp"
            android:background="@color/overlay_dark_10">
        </ImageView>

        <Button
            android:id="@+id/btnEditProfil"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:layout_below="@id/garis4"
            android:text="Edit Profil">


        </Button>

        <Button
            android:id="@+id/button_logoutMain"
            android:background="@color/overlay_dark_80"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnEditProfil"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/cardview_light_background"
            android:text="Log Out" />

    </RelativeLayout>


</FrameLayout>